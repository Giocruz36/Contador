<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <include layout="@layout/menu_toolbar"
        android:id="@+id/menu_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/valorContador"
            android:hint="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="13dp"
            android:textAlignment="center"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonsuma"
            style = "@style/boton"
            android:layout_width="175dp"
            android:layout_height="111dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="449dp"
            android:onClick="sumar"
            android:text="@string/sumar"
            android:textSize="60sp"
             />

        <Button
            android:id="@+id/buttonresta"
            style="@style/boton2"
            android:layout_width="175dp"
            android:layout_height="111dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="449dp"
            android:onClick="restar"
            android:text="@string/restar"
            android:textSize="60sp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/reset"
            android:layout_width="180dp"
            android:layout_height="67dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="#FF0000"
            android:onClick="reseteo"
            android:text="@string/reseteo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:orientation="vertical"
        android:weightSum="2">

        <EditText
            android:id="@+id/valorReseteo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="21dp"
            android:hint="0"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/negativos"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="21dp"
            android:onClick="reseteo"
            android:text="@string/valornegat" />
    </LinearLayout>

</LinearLayout>