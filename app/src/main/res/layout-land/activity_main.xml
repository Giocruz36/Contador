<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/degradado2"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <include layout="@layout/menu_toolbar"
        android:id="@+id/menu_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/valorContador"
            android:hint="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="13dp"
            android:textAlignment="center"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/buttonsuma"
            style="@style/boton"
            android:layout_width="215dp"
            android:layout_height="92dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"
            android:onClick="sumar"
            android:text="@string/sumar"
            android:textSize="55sp" />

        <Button
            android:id="@+id/buttonresta"
            style="@style/boton3"
            android:layout_width="215dp"
            android:layout_height="92dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"
            android:onClick="restar"
            android:text="@string/restar"
            android:textSize="55sp" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:weightSum="6">

            <CheckBox
                android:id="@+id/negativos"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="101dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="21dp"
                android:onClick="reseteo"
                android:text="@string/valornegat" />
            <Button
                android:id="@+id/reset"
                android:layout_width="180dp"
                android:layout_height="65dp"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="21dp"
                android:backgroundTint="#FF0000"
                android:onClick="reseteo"
                android:text="@string/reseteo" />
            <EditText
                android:id="@+id/valorReseteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="21dp"
                android:ems="10"
                android:hint="0"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>